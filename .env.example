# LLM Provider Configuration
LLM_PROVIDER=openai
LLM_MODEL=gpt-4o

# OpenAI Configuration (Primary)
OPENAI_API_KEY=sk-your-openai-api-key-here

# Model Configuration
OPENAI_AGENT_MODEL=gpt-4o
OPENAI_MEMORY_MODEL=gpt-4o-mini
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# Anthropic (Optional - for provider switching)
ANTHROPIC_API_KEY=

# Google (Optional - for provider switching)
GOOGLE_API_KEY=

# Ollama (Optional - for local models)
OLLAMA_BASE_URL=http://localhost:11434

# Database Configuration
DATABASE_PROVIDER=sqlite
DATABASE_PATH=./data/memu.db

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=text

# Agent Configuration
AGENT_NAME=Ruby
AGENT_MAX_HISTORY=10
AGENT_MAX_MEMORY_ITEMS=10

# Hybrid Routing (Optional)
HYBRID_ROUTING=False
HYBRID_ROUTING_MODEL=llama3.1:latest

# Email Configuration (Optional)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password

# Outlook Configuration (Optional)
OUTLOOK_HOST=smtp.office365.com
OUTLOOK_PORT=587
OUTLOOK_USER=your-email@outlook.com
OUTLOOK_PASSWORD=your-app-password
